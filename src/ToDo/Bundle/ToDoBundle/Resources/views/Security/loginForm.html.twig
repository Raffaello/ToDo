<form action="{{ path("_login_check") }}" method="post" id="login" class="form-signin">
    <h2 class="form-signin-heading">Please Sign in</h2>
    {% if error %}
        <div class="alert alert-danger">{{ error.message | trans }}</div>
    {% endif %}
    <input type="text" class="form-control" placeholder="Username" required autofocus id="username" name="_username" value="{{ last_username }}">
    <input type="password" class="form-control" placeholder="Password" required id="password" name="_password">
    <label class="checkbox">
        <input type="checkbox" value="remember-me" name="_remember_me" id="remember_me"> Remember Me
    </label>
    <button class="btn btn-lg btn-primary btn-block" type="submit" name="_submit">Accedi</button>
</form>